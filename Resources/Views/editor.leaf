<div style="width: 70%">
  <form action="/" method="POST">
    <textarea
      id="code"
      style="width: 100%"
      name="code"
      placeholder="Enter SML code ..."
      rows="20"
      cols="50"
      autofocus="true">#(code)</textarea>
    <input type="submit" value="Compile!" />
  </form>
  <script>
    var editor = CodeMirror.fromTextArea(code, {lineNumbers: true});
  </script>
  <h4 style="color: red">#(error)</h4>
</div>
