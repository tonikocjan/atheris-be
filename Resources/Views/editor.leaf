<form action="/" method="POST">
  <textarea
    id="code"
    style="width: 100%; background-color: #f2f2ef;"
    name="code"
    placeholder="Enter SML code ..."
    rows="20"
    cols="50"
    autofocus="true">#(code)</textarea>
  <div class="run">
    <input type="image" src="/images/rocket.png" style="width: 55px; height: 55px">
  </div>
</form>
<script>
  var editor = CodeMirror.fromTextArea(code, {lineNumbers: true});
</script>
